<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <style>
        .cardAgentList {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
        }
        .cardAgentList .card-container {
            flex: 1 1 calc(25% - 1rem);
            display: flex;
            justify-content: center;
        }
        .card {
            cursor: pointer;

            width: 100%;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 0.5rem;
            transition: box-shadow 0.3s ease-in-out;
        }
        .card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }
        .button-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 10px;
        margin-top: 10px;
    }

    .button-container a {
        text-decoration: none; /* Remove underline from link */
    }

    .styled-button {
        background-color: #009EE2;
        color: white;
        width: 100%;
        border: none;
        border-radius: 4px;
        padding: 10px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .styled-button:hover {
        background-color: #007BB5;
    }

    .styled-button:focus {
        outline: none;
        box-shadow: 0 0 0 2px rgba(0, 158, 226, 0.5);
    }


    .table-controls {
    display: flex;
    justify-content: space-between; /* Align controls to the right */
    padding: 10px 70px;
    margin-bottom: 1px;
}

.arrow{
    font-size: 25px;
}
.arrow a{
    font-size: 30px;
    color: black;
}
</style>
</head>
<body>
      <!-- Header -->
  <%- include('../partials/header.ejs') %>
  <!-- Header Ends!! -->
 
  <div class="table-controls">  
    <div class="arrow">
        <a href="/dashboard">
            <i class="fas fa-arrow-left"></i>
        </a>
    </div>
</div> 

    <div class="cardAgentList">
        <% agents.forEach(agent => { %>
            <div class="card-container">
                <div class="card border h-100">
                    <div class="card-body text-center pb-0">
                        <div class="avatar avatar-xl flex-shrink-0 mb-3">
                            <img class="avatar-img rounded-circle" src="/img/amin.png" alt="avatar">
                        </div>
                        <h5 class="mb-1"><%= agent.name_Responsable %></h5>
                        <div style="display: flex; flex-direction: column; align-items: center; margin-top: 1rem;">
                            <h6 style="margin-bottom: 0.5rem;" class="mb-0 small">
                                <span class="fw-light">Username: <%= agent.username %></span>
                            </h6>
                            <h6 style="margin-bottom: 0.5rem;" class="mb-0 small">
                                <span class="fw-light">Number of Cars: <%= agent.carCount %></span>
                            </h6>
                            <h6 style="margin-bottom: 0.5rem;" class="mb-0 small">
                                <span class="fw-light">Number of Flights: <%= agent.flightCount %></span>
                            </h6>
                            <h6 style="margin-bottom: 0.5rem;" class="mb-0 small">
                                <span class="fw-light">Number of Hotel: <%= agent.hotelCount %></span>
                            </h6>
                        
                        </div>
                    </div>
                    <div class="button-container">

                           <a href="/agent-list/<%= agent._id %>"><button  class="styled-button">Details</button></a>  

                </div>
                    </div>
            </div>
        <% }) %>
    </div>
     <!-- Footer -->
  <%- include('../partials/footer.ejs') %>
  <!-- Footer End !! -->
</body>
</html>
