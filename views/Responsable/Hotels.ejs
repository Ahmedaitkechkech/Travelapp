<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Listings</title>
      <!-- FontAwesome -->
      <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/Hotels.css">
</head>
<style>
    .table-controls {
     display: flex;
     justify-content: space-between; /* Align controls to the right */
     padding: 10px 70px;
     margin-bottom: 1px;
 }
 
 .arrow{
     font-size: 25px;
 }
 .arrow a{
     font-size: 30px;
     color: black;
 }
 </style>
<body>
    <%- include('../partials/header.ejs') %>
    <div class="table-controls">  

        <div class="arrow">
            <a href="/dashboard-Responsable">
                <i class="fas fa-arrow-left"></i>
            </a>
        </div>
        <div class="table-controls">  
            <a href="add-Hotel">
                <button class="button-primary">
                    <i class="button-Ajoute"></i> Ajouter Hotel
                </button>
            </a>
           
        </div>
    </div>

   

    <div class="content">
        <div class="container">
            <h2>My Listings <span class="item-count">5 Items</span></h2>
            <% Hotels.forEach(Hotel => { %>
            <div class="listing">
                <img src="<%= Hotel.Photo %>" alt="<%= Hotel.Nom_Hotel %>">
                <div class="listing-details">
                    <h3><%= Hotel.Nom_Hotel %></h3>
                    <p><span class="location"><%= Hotel.Adresse_Hotel %></span></p>
                    <p><span class="price">$<%= Hotel.Prix %></span>/day</p>
                </div>
                <div class="actions">
                    <a href="/edit-Hotel/<%= Hotel._id %>" class="btn btn-sm btn-light mb-0"  >Edit</a>

                    <form action="/edit-Hotel/<%= Hotel._id %>?_method=DELETE" method="POST" style="display:inline;">
                    <button class="btn btn-sm btn-danger mb-0">Delete</button>
                    </form>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
    <%- include('../partials/Footer.ejs') %>
</body>
</html>
