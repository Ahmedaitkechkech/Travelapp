<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <link rel="stylesheet" href="/css/cardCars.css">


    
   
</head>
<body>
    <!-- Header -->
    <%- include('../partials/header.ejs') %>
    <!-- Header Ends!! -->
    <div class="ajouter-car">  
      <a href="add-car">
          <button class="button-primary">
              <i class="button-Ajoute"></i> Ajouter car
          </button>
      </a>
      <a href="/dashboard">
          <i class="button-arrow"></i>
      </a>
  </div>
  <div class="card-container">
    <% if (cars.length === 0) { %>
        <p class="text-center">Aucune donn√©e disponible</p>
    <% } else { %>
        <% cars.forEach(car => { %>
            <div class="cards">
                <div class="card-body p-0">
                    <div class="row g-2 g-sm-4 mb-4">
                        <div class="col-md-4 col-xl-3">
                            <div class="bg-light rounded-3 px-4 py-5">
                                <!-- Add a class for styling -->
                                <img src=<%= car.photo %> alt="Car Photo" >
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-4 col-xl-6">
                            <h4 class="card-title mb-2">
                                <%= car.car_model %>
                            </h4>
                            <ul class="nav nav-divider h6 fw-normal mb-2">
                                <li class="nav-item"><%= car.type %></li>
                                <li class="nav-item"><%= car.nombre_seats %> Seats</li>
                            </ul>
                        </div>
                        <div class="col-sm-6 col-md-4 col-xl-3 text-sm-end">
                            <ul class="list-inline mb-1">
                                <li class="list-inline-item h5 mb-0">$<%= car.prix %></li>
                            </ul>
                            <i class="fas fa-heart" style="margin-top: 30px; margin-left: 20%;"></i>

                            <div class="icon-container">
                                <form action="/edite-car/<%= car._id %>?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-sm mb-1"><i class="fas fa-trash-alt"></i></button>
                                </form>
                                <a href="/edite-car/<%= car._id %>" class="text-warning mb-0" style="margin-top: 4px;"><i class="fas fa-edit"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Data static -->
                <div class="card-footer border-top p-0 pt-3">
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-group list-group-borderless mb-0">
                                <li class="list-group-item d-flex pb-0 mb-0">
                                    <span class="h6 fw-normal mb-0">
                                        <i class="bi bi-check-circle me-2"></i>Kms included. After that $15/Kms
                                    </span>
                                </li>
                                <li class="list-group-item d-flex pb-0 mb-0">
                                    <span class="h6 fw-normal mb-0">
                                        <i class="bi bi-check-circle me-2"></i> luggage bags
                                    </span>
                                </li>
                                <li class="list-group-item d-flex pb-0 mb-0">
                                    <span class="h6 fw-normal mb-0">
                                        <i class="bi bi-check-circle me-2"></i> Car
                                    </span>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-group list-group-borderless mb-0">
                                <li class="list-group-item d-flex h6 fw-light text-success pb-0 mb-0">
                                    Free Cancellation, till 1 hour of Pick up
                                </li>
                                <li class="list-group-item d-flex h6 fw-light text-success pb-0 mb-0">
                                    Free waiting up to 45 minutes
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    <% } %>
</div>


    <%- include('../partials/footer.ejs') %>
</body>
</html>
